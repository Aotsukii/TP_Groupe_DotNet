@model Article

<h1 class="display-4">Modification de l'article : @Model.Libelle</h1>
<div class="row">
    <form asp-controller="Article" asp-action="Edit" method="Post">
        <div class="form-group">
            <label asp-for="Libelle">Libelle</label>
            <input asp-for="Libelle" type="text" class="form-control" id="libelle" value="@Model.Libelle">
        </div>
        <div class="form-group">
            <label asp-for="PrixInitial">Prix initial</label>
            <input asp-for="PrixInitial" type="text" class="form-control" id="poids" value="@Model.Poids">
        </div>
        <div class="form-group">
            <label asp-for="SKU">SKU</label>
            <input asp-for="SKU" type="text" class="form-control" id="poids" value="@Model.Poids">
        </div>
        <div class="form-group">
            <label asp-for="PrixInitial">Prix</label>
            <input asp-for="PrixInitial" type="text" class="form-control" id="price" value="@Model.PrixInitial">
        </div>
        <div class="form-group">
            <label asp-for="Poids">Poids</label>
            <input asp-for="Poids" type="text" class="form-control" id="poids" value="@Model.Poids">
        </div>
        <div class="form-group">
            <label asp-for="DateSortie">Date de sortie</label>
            <input asp-for="DateSortie" type="date" class="form-control" id="poids" value="@Model.Poids">
        </div>
        <button type="submit" class="btn btn-primary">Modifier</button>
    </form>
</div>